<% provide(:title, "Home") %>

<div class="panel panel-default">
  <div class="panel-heading">
    <h4>Items in stock</h4>
  </div>

<div class="wrapper">
  <div class="container">
    <div class="row">
      <div class="col-md-12 col-ms-12">
        <% @items.each do |item| %>
        <!-- image -->
        <% if item.image? %>
            <a class="thumbnail">
              <div class="ratio"></div>
              <%= image_tag item.image.url(:thumb) %>
            </a>
          <% end %>
          <br>
            <h3><%= item.name %></h3>
          <br>
            <p><small><%= truncate(item.description, length:225) %></small></p>
          <br>
            <% if admin_signed_in? %>
              <%= link_to "Edit", edit_stock_path(item) %>
              <%= link_to "Delete", stock_path(item), method: :delete, data: { confirm: "You are attempting to delete the post. Click 'Ok' to delete." } %>
            <% end %>
          <% end %>
        </div>
    </div>
</div>
