<% provide(:title, "Home") %>

<div class="panel panel-default">
  <div class="panel-heading">
    <h4>Items in stock: <%= @items.count %></h4>
  </div>

  <div class="container">

    <div class="row">
      <% @items.each do |item| %>
        <div class="col-sm-6 col-md-4">
          <div class="thumbnail">
            <%= render 'stock_image', item: item %>
            <div class="caption">
              <h4><%=link_to item.name, item %></h4>
              <hr>
              <p><small><%= truncate(item.description, length:40) %></small></p>
              <p><small><%= item_type_in_words(item) %></small></p>
              <%= render 'admin_stock_links', item: item %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    <%= will_paginate(@items, :renderer => WillPaginate::ActionView::LinkRenderer) %>
