<%= provide(:title, "Item") %>
<div class="container">
  <div class="row">
    <div class="col-lg-3 col-md-4 col-xs-6 thumb">
        <h1><%= @item.name %></h1>
        <a class="thumbnail">
          <div class="ratio"></div>
            <%= image_tag @item.image.url(:image) %>
        </a>
    </div>
  </div>
    <h4><%= @item.description %></h4>
  </div>
</div>
